
<h2>Edit <%= resource_name.to_s.humanize %></h2>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
  <%= devise_error_messages! %>
<div class="row">
  <div class="col-md-6 col-md-4">
      <div class="p-xs">
        <div class="pull-left m-r-md">
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true , class: "input-sm form-control"%>
  </div>  

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true , class: "input-sm form-control"%>
  </div>
  
  <br>


<h4> Upload Photo </h4>

  <% if current_user.user_photo_file_name? %>
    <%= image_tag( current_user.user_photo.url(:thumb), alt: "image", class: "img-rounded user-img-profile")%>
  <% else %>
    <%= image_tag("default_profile.png", alt: "image", class: "img-rounded user-img-profile") %>
  <% end %>

<br><br>


  <div class="field">
    <%= f.label :user_photo %><br />
    <%= f.file_field :user_photo %>
  </div>
  
<br>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>


  <h4> Change Password </h4>
  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off", class: "input-sm form-control"  %>
  </div>
<br>


  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "input-sm form-control"%>
  </div>

<br>
<br>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" , class: "input-sm form-control"%>
  </div>

<br><br>
    <div class="field">
      <div class="actions">
        <button class="btn btn-sm btn-primary  m-t-n-xs" type="submit"><strong>Update</strong></button>
      </div>
    </div>

<% end %>

<br>

<h3>Cancel my account</h3>

<br>
    <div>
      <%= button_to "Cancel my account" , class: "btn btn-sm btn-primary  m-t-n-xs"%>
    </div>

<br>

</div>
</div>
</div>
</div>
