<div class="passwordBox animated fadeInDown">
    <div class="row">

        <div class="col-md-12">
            <div class="ibox-content">
            	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  
                <h2 class="font-bold">Forgot password</h2>

                <p>
                    Enter your email address and your password will be reset and emailed to you.
                </p>
                <%= devise_error_messages! %>
                <div class="row">

                    <div class="col-lg-12">
                        <form class="m-t" role="form" action="index.html">
                            <div class="form-group">
                            	<%= f.label :email %><br />
    							<%= f.email_field :email, autofocus: true,class: "form-control", placeholder: "Email address",required:"" %>
                            </div>

   							<%= f.submit "Send me reset password instructions" ,class:"btn btn-primary block full-width m-b" %>

                        </form>

                        <%- if controller_name != 'sessions' %>
                            <%= link_to "Log in", new_session_path(resource_name),  class:"btn btn-sm btn-white btn-block" %>
                        <% end -%>

                        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                            <%= link_to "Sign up", new_registration_path(resource_name), class:"btn btn-sm btn-white btn-block" %><br />
                        <% end -%>
                    
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            Copyright Weplim
        </div>
        <div class="col-md-6 text-right">
            <small>Â© 2015-2016</small>
        </div>
    </div>
    <% end %>

</div>






