<p id="notice"><%= notice %></p>
<h1><%=@ideation_session.name%></h1>
<br>
<h2><%=@ideation_session.description%></h2>
<br>
<%if @ideation_session.start_time!=nil%>
  <h3>Session start: </h3>
  <h2><%=@ideation_session.start_time.to_s %></h2>
<%end%>
<%if @ideation_session.end_time!=nil%>
  <h3>Session end: </h3>
  <h2><%=@ideation_session.end_time.to_s %></h2>
<%end%>
<br>
<h1>Participants</h1>
<div>Anonymity: <%=@ideation_session.anonymity%></div>
 
<div class= "field">
  <%= render @participants %>
</div>
<div class= "field">
<% if current_user.id==@ideation_session.user_id %>
  <%= render 'participants/form' %>
<% end %>
</div>

<script>
  $(document).ready(function() {
    $('.footable').footable();
  });
</script>

