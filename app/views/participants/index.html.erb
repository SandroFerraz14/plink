<p id="notice"><%= notice %></p>

<h1>Participants</h1>

<table class="footable table">
  <thead>
    <tr>
      <th>Active</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @participants %>
  </tbody>
</table>

<% if current_user.id==@ideation_session.user_id %>
  <%= render 'participants/form' %>
<% end %>


<script>
  $(document).ready(function() {
    $('.footable').footable();
  });
</script>

