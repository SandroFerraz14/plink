<div class="col-lg-4">
  <div class="contact-box">
      <div class="col-sm-4">
        <div class="text-center">
          <%= image_tag(participant.avatar_file_name, alt: "image", class: "img-rounded user-img-profile")%>
            <div class="m-t-xs font-bold">
              <%= (participant.user_id == @ideation_session.user_id) ? "Dinamizador" : "Membro" %>
            </div>
        </div>
      </div>
    <div class="col-sm-8">
      <h3><strong><%=participant.nickname%></strong></h3>
      <% if participant.active? %>
      <i class='fa fa-check text-navy'></i>
    <% else %>
      <i class="fa fa-circle text-danger"></i>
    <% end %>
    </div>
    <div class="clearfix"></div>
  </div>
</div>
